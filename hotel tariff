m=int(input())
if(m>12):
    print(f'Invalid Input')
if(m==4 or m==5 or m==6 or m==11 or m==12):
    r=float(input())
    d=int(input())
    tariff=(r*(20/100)+r)*d
    print(f'Hotel Tariff:Rs.''%.2f'%tariff)
if(m==1 or m==2 or m==3 or m==7 or m==8 or m==9 or m==10):
    r=float(input())
    d=int(input())
    tariff=(r*d)
    print(f'Hotel Tariff:Rs.''%.2f'%tariff)
